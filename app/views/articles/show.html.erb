<h1><%= @article.title %></h1>
<p>Tags:
  <% @article.tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag) %>
  <% end %>
</p>
<p><%= @article.body %></p>

<h3>Comments (<%= @article.comments.count %>)</h3>
<%= render partial: 'articles/comment', collection: @article.comments.reverse %>

<%= render partial: 'comments/form' %>

<%= link_to "Delete Article", article_path(@article), method: :delete, data: { confirm: "Delete this article?" } %><br />
<%= link_to "Edit Article", edit_article_path(@article) %><br />

<%= link_to "<< Return to List", articles_path %>
