<h1><%= @article.title %></h1>
<p><%= @article.body %></p>

<h3>Comments</h3>
<% @article.comments.each do |comment| %>
<p>Author: <%= comment.author_name %></p>
<p><%= comment.body %></p>
<% end %>

<%= link_to "Delete Article", article_path(@article), method: :delete, data: { confirm: "Delete this article?" } %><br />
<%= link_to "Edit Article", edit_article_path(@article) %><br />

<%= link_to "<< Return to List", articles_path %>
